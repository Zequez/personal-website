---
import { groupedPortfolio, timesMap } from "../lib/portfolio-utils";
---

<div class="flex space-x-4 p4 rounded-md bg-main-700 mb4">
  {
    Object.entries(groupedPortfolio).map(([timeGroup, portfolioEntries]) => (
      <div class="w-1/3  text-white ">
        <div class="font-bold text">
          {timesMap[timeGroup as keyof typeof timesMap]}
        </div>
        <div class="opacity-80">
          {portfolioEntries.map(({ slug, data: { title } }) => (
            <a class="block underline" href={`/portfolio#${slug}`}>
              {title}
            </a>
          ))}
        </div>
      </div>
    ))
  }
</div>
